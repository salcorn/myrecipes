<%= render 'shared/page_title', title: "All Chefs" %>

<div class="row">
  <div class="col-md-4 col-md-offset-4 center">
    <%= will_paginate %>
  </div><!-- end col-md-4 -->
</div><!-- end row -->

<% @chefs.each do |chef| %>
  
  <div class="row">
    <div class="col-md-4 col-md-offset-4 center">
      <%= link_to gravatar_for(chef, size: 200), chef_path(chef) %>
      <p>
        <h5>Chef name: <%= chef.chefname %></h5>
      </p>
    </div>
  </div>

<% end %>